@model MercDevs_ej2.Models.Servicio

@{
    ViewData["Title"] = "Descripción del Servicio";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>Detalles del Servicio</h3>
            <table class="table">
                <tr>
                    <th>Nombre:</th>
                    <td>@Model.Nombre</td>
                </tr>
                <tr>
                    <th>Precio:</th>
                    <td>@Model.Precio.ToString("C")</td>
                </tr>
                <tr>
                    <th>SKU:</th>
                    <td>@Model.Sku</td>
                </tr>
                <tr>
                    <th>Descripciones del Servicio:</th>
                    <td>
                        <ul>
                            @foreach (var descripcion in Model.Descripcionservicios)
                            {
                                <li>@descripcion.Nombre</li>
                            }
                        </ul>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <p>
        <a asp-action="Edit" asp-route-id="@Model.IdServicio">
            <button type="button" class="btn btn-primary">Editar</button>
        </a>
        |
        <a asp-action="Index">
            <button type="button" class="btn btn-secondary">Volver a la lista</button>
        </a>
    </p>
</div>
